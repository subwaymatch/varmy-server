doctype html
html(class=isGrayBackground ? 'bg-gray' : '')
	head
		title #{title}
		block scripts

		link(rel='stylesheet' type='text/css' href='http://yui.yahooapis.com/3.18.1/build/cssreset/cssreset-min.css')
		link(rel='stylesheet' type='text/css' href='css/typegrid.css')
		link(rel='stylesheet' type='text/css' href='css/style.css')
		link(rel='stylesheet' href='https://fonts.googleapis.com/css?family=Roboto:300,400,400i,700,700i')
		
	body
		#header
			.left
				#logo
					a(href='/') Vocapin

			if (user)
				.right
					a(href='/profile').menu-item Profile Page
			else
				.right
					a(href='/login').menu-item Log In
					a(href='/signup').menu-item Sign Up

			.clear

		#content
			div.container
				block content